<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:text="What does 'Regular/intensive/both available' mean?" />

    <TextView
        android:id="@+id/question_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        android:text="While most subjects run the length of a semester (or trimester) with a smallish number of contact hours each week, other subjects are run as 'intensives''. These usually require attendance every day over a small period of time, usually 1-3 weeks"/>
    <Button
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="69dp"

        android:text="What does 'Next Offered' mean?"/>
    <TextView
        android:id="@+id/question_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone"
        android:text="Some languages are only able to be offered on a rotating cycle, such as every two years."/>
    <Button
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="What is a 'Subject Code'?"/>
    <TextView
        android:id="@+id/question_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:text="This is the identifying code for this particular subject at this university. "/>



</LinearLayout>