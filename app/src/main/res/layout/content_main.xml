<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.testing.MainActivity"
    tools:showIn="@layout/app_bar_main">



    <ImageView
        android:layout_width="382dp"
        android:layout_height="183dp"
        android:src="@drawable/realtop"

        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp" />

    <ImageView
        android:layout_width="499dp"
        android:layout_height="187dp"
        android:src="@drawable/search_div_background_faded_copy"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="190dp"
        tools:layout_editor_absoluteX="1dp" />

    <ImageView
        android:id="@+id/ban_1"
        android:layout_width="566dp"
        android:layout_height="171dp"
        android:src="@drawable/what_languages_banner"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"

        android:layout_marginTop="344dp" />


    <Button
        android:id="@+id/button1"
        android:layout_below="@+id/ban_1"
        android:layout_width="115dp"
        android:layout_height="72dp"
        android:text="FIND MORE OF STUDY A LANGUAGE AT UNIVERSITY "


        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        android:layout_marginTop="256dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="69dp"
        android:layout_below="@+id/button1"
        android:layout_height="107dp"
        android:text="WHAT LANGUAGES CAN I STUDY? "


        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="387dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="94dp"
        android:textColor="#FFFFFF"


        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.528"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="DO YOU WANT TO STUDY A LANGUAGE AT A UNIVERSITY?" />

    <Button
        android:id="@+id/but1"
        android:layout_width="195dp"
        android:layout_height="62dp"
        android:text="MORE ABOUT ULPA"


        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        tools:layout_editor_absoluteY="505dp" />


    <Button
        android:id="@+id/but2"
        android:layout_width="195dp"
        android:layout_height="62dp"
        android:text="FAQ"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout_editor_absoluteY="513dp"
        tools:layout_editor_absoluteX="203dp" />


</android.support.constraint.ConstraintLayout>
